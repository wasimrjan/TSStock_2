<script>


    $(window).bind('keydown', function (event) {
        if (event.ctrlKey || event.metaKey) {
            switch (String.fromCharCode(event.which).toLowerCase()) {
                case 's':
                    event.preventDefault();
                    try {
                        window["form_Save"]();
                    } catch (e) { };
                    SaveForm();
                    break;
                case 'f':
                    event.preventDefault();
                    try {
                        window["form_New"]();
                    } catch (e) { };
                    NewForm();
                    break;
                case 'e':
                    event.preventDefault();
                    try {
                        window["form_Edit"]();
                    } catch (e) { };
                    EditForm();
                    break;
                case 'g':
                    event.preventDefault();
                    try {
                        window["form_Cancel"]();
                    } catch (e) { };
                    CancelForm();
                    break;
                case 'l':
                    event.preventDefault();
                    try {
                        window["form_Close"]();
                    } catch (e) { };
                    CloseForm();
                    break;
                case 'r':
                    event.preventDefault();
                    try {
                        window["form_Clear"]();
                    } catch (e) { };
                    ClearForm();
                    break;
                case 'd':
                    event.preventDefault();
                    try {
                        window["form_Delete"]();
                    } catch (e) { };
                    DeleteForm();
                    break;
                case 'q':
                    event.preventDefault();
                    try {
                        window["form_Query"]();
                    } catch (e) { };
                    QueryExecute();
                    break;
            }
        }
    });

    function QueryExecute() {
        HCGlobal.RunQuery();
    }

    function SaveForm() {
        HCGlobal.SaveForm();
    }

    function ClearForm() {
        HCGlobal.ClearForm();
    }

    function NewForm() {
        HCGlobal.OpenNewForm();
    }

    function EditForm() {
        HCGlobal.EditForm();
    }

    function DeleteForm() {
        HCGlobal.DeleteForm();
    }

    function CancelForm() {
        HCGlobal.CancelForm();
    }

    function CloseForm() {
        if (HCGlobal.currClass.head.dataEdit === "Y") {
            var d = confirm("Are you sure want to cancel editing");
            if (d) {
                HCGlobal.currClass.head.dataEdit = "N";
                HCGlobal.currClass.functions.Close();
            }
        }
        else
            HCGlobal.currClass.functions.Close();
    }

</script>

